{
    "$schema": "https://json.schemastore.org/package.json",
    "name": "example-grpc-node-client",
    "version": "1.0.0",
    "description": "grpc client for node js and typescript for the app",
    "keywords": [
        "grpc",
        "typescript"
    ],
    "author": {
        "name": "Ninad Tungare",
        "email": "ninad.tungare@gmail.com"
    },
    "license": "MIT",
    "files": [
        "dist/**/*",
        "README.md",
        "LICENSE"
    ],
    "exports": {
        ".": {
            "import": "./dist/esm/index.mjs",
            "require": "./dist/cjs/index.js"
        },
        "./hello": {
            "import": "./dist/esm/hello.mjs",
            "require": "./dist/cjs/hello.js"
        },
        "./generated/*": {
            "import": "./dist/esm/generated/*.mjs",
            "require": "./dist/cjs/generated/*.js"
        }
    },
    "packageManager": "pnpm@10.26.2+sha512.0e308ff2005fc7410366f154f625f6631ab2b16b1d2e70238444dd6ae9d630a8482d92a451144debc492416896ed16f7b114a86ec68b8404b2443869e68ffda6",
    "scripts": {
        "check": "tsc --noEmit --extendedDiagnostics",
        "clean": "rm -rf dist types",
        "build": "pnpm run build:generate && pnpm run build:library",
        "build:generate": "buf generate",
        "build:library": "pnpm run build:esbuild",
        "build:types": "NODE_ENV=production tsc -p tsconfig.json --emitDeclarationOnly",
        "build:esbuild": "NODE_ENV=production tsup --config tsup.config.ts",
        "lint": "oxlint --type-aware src",
        "format": "oxfmt src",
        "update": "sh ./update-all-dependencies.sh",
        "trial": "pnpm run trial:cjs && pnpm run trial:esm",
        "trial:cjs": "node ./dist/cjs/trial.js",
        "trial:esm": "node ./dist/esm/trial.mjs"
    },
    "dependencies": {
        "@bufbuild/protobuf": "^2.10.2",
        "@grpc/grpc-js": "^1.14.3",
        "google-protobuf": "^4.0.1"
    },
    "devDependencies": {
        "@bufbuild/buf": "^1.61.0",
        "@microsoft/api-extractor": "^7.55.2",
        "@types/google-protobuf": "^3.15.12",
        "@types/node": "^25.0.3",
        "esbuild-fix-imports-plugin": "^1.0.23",
        "esbuild-plugin-d.ts": "^1.3.1",
        "oxfmt": "^0.20.0",
        "oxlint": "^1.35.0",
        "oxlint-tsgolint": "^0.10.0",
        "ts-proto": "^2.10.1",
        "tsup": "^8.5.1",
        "typescript": "^5.9.3"
    }
}
