{
    "$schema": "https://json.schemastore.org/package.json",
    "name": "grpc-example",
    "version": "1.0.0",
    "description": "grpc-example for the app",
    "keywords": [
        "grpc",
        "typescript"
    ],
    "author": {
        "name": "Ninad Tungare",
        "email": "ninad.tungare@gmail.com"
    },
    "license": "MIT",
    "exports": {
        ".": {
            "import": "./dist/esm/index.js",
            "require": "./dist/cjs/index.js",
            "types": "./dist/types/index.d.ts"
        },
        "./hello": {
            "import": "./dist/esm/hello.js",
            "require": "./dist/cjs/hello.cjs",
            "types": "./dist/esm/hello.d.ts"
        }
    },
    "packageManager": "pnpm@10.26.2+sha512.0e308ff2005fc7410366f154f625f6631ab2b16b1d2e70238444dd6ae9d630a8482d92a451144debc492416896ed16f7b114a86ec68b8404b2443869e68ffda6",
    "scripts": {
        "check": "tsc --noEmit --extendedDiagnostics",
        "clean": "rm -rf dist types",
        "build": "pnpm run build:generate && pnpm run build:library",
        "build:generate": "sh ./compile-proto.sh",
        "build:library": "pnpm run build:types && pnpm run build:cjs && pnpm run build:esm",
        "build:types": "NODE_ENV=production tsc -p tsconfig.json",
        "build:cjs": "NODE_ENV=production tsc -p tsconfig.cjs.json",
        "build:esm": "NODE_ENV=production tsc -p tsconfig.esm.json",
        "lint": "oxlint --type-aware src",
        "format": "oxfmt src",
        "update": "sh ./update-all-dependencies.sh",
        "start": "node ./dist/index.js"
    },
    "dependencies": {
        "@grpc/grpc-js": "^1.14.3",
        "google-protobuf": "^4.0.1"
    },
    "devDependencies": {
        "@types/google-protobuf": "^3.15.12",
        "@types/node": "^25.0.3",
        "grpc-tools": "^1.13.1",
        "oxfmt": "^0.20.0",
        "oxlint": "^1.35.0",
        "oxlint-tsgolint": "^0.10.0",
        "ts-protoc-gen": "^0.15.0",
        "typescript": "^5.9.3"
    }
}