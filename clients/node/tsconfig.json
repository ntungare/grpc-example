{
    "$schema": "https://json.schemastore.org/tsconfig.json",
    "compilerOptions": {
        "outDir": "./dist",
        "target": "esnext",
        "module": "nodenext",
        "moduleResolution": "nodenext",
        "allowJs": true,
        "sourceMap": true,
        "skipLibCheck": true,
        "noImplicitAny": true,
        "esModuleInterop": true,
        "declaration": true,
        "declarationMap": true,
        "declarationDir": "./dist/types",
        "emitDeclarationOnly": true,
        "typeRoots": [
            "./node_modules/@types",
            "./src/types"
        ],
    },
    "include": [
        "./src/**/*"
    ],
    "exclude": [
        "./dist",
        "node_modules"
    ],
}